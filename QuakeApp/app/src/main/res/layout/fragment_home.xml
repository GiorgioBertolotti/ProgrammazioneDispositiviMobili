<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Home">

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/home_layout_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/home_recent_eq_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="@color/red"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:id="@+id/home_layout_card_more_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/home_layout_card_more_about_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/home_layout_card_more_about_last"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <info.androidhive.fontawesome.FontTextView
                                android:id="@+id/home_icon_globe"
                                style="@style/Card_Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:solid_icon="true" />

                            <TextView
                                android:id="@+id/home_last"
                                style="@style/Card_Caption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/home_last" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_layout_card_more_about_button"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="4dp"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/home_button_more_about"
                                style="@style/Card_BUTTON"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="40dp"
                                android:background="@drawable/corner_radius_button_card_red"
                                android:text="@string/home_more_about" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_layout_card_more_about_bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/home_layout_card_more_about_bottom_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/home_today"
                                    style="@style/Card_Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/home_today" />

                                <TextView
                                    android:id="@+id/home_number_tremors"
                                    style="@style/Card_Body1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="8" />

                                <TextView
                                    android:id="@+id/home_tremors"
                                    style="@style/Card_Body2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="@string/home_tremors" />
                            </LinearLayout>

                            <View
                                android:id="@+id/home_separator"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/home_layout_card_more_about_bottom_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/home_this_week"
                                style="@style/Card_Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/home_this_week" />

                            <TextView
                                android:id="@+id/home_number_tremors_week"
                                style="@style/Card_Body1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="52" />

                            <TextView
                                android:id="@+id/home_tremors_week"
                                style="@style/Card_Body2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="@string/home_tremors" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/home_safety_measures_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cardBackgroundColor="#9733EE"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:id="@+id/home_layout_card_safety_measures"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/home_layout_card_safety_measures_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_safety_measures"
                            style="@style/Card_Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_safety_measures" />

                        <info.androidhive.fontawesome.FontTextView
                            android:id="@+id/home_icon_safety"
                            style="@style/Card_Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:solid_icon="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_layout_card_safety_measures_best_practices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/home_behaviors"
                            style="@style/Card_Body2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home_behaviors" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_layout_card_safety_measures_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/home_button_view"
                            style="@style/Card_BUTTON"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/corner_radius_button_card_violet"
                            android:text="@string/home_view" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>