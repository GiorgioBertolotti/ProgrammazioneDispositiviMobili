<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Home">

    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/home_layout_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include
                layout="@layout/earthquakes_card"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_marginVertical="16dp"
                android:layout_marginStart="16dp" />

            <include
                layout="@layout/safety_card"
                android:layout_width="300dp"
                android:layout_height="140dp"
                android:layout_margin="16dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_areas_of_interest"
                style="@style/H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/home_areas_of_interest" />

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/home_icon_plus"
                style="@style/H6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="@string/fa_plus_solid"
                android:textColor="@color/black"
                app:solid_icon="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_area_one"
                style="@style/Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Italia" />

            <Button
                android:id="@+id/home_button_safe"
                style="@style/Overline"
                android:layout_width="54dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/home_area_one"
                android:background="@drawable/corner_radius_button_green_safe"
                android:text="@string/home_safe"
                android:textColor="@color/white" />

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/home_icon_trash"
                style="@style/Overline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="@string/fa_trash_alt_solid"
                android:textColor="@color/red"
                app:solid_icon="true" />
        </RelativeLayout>

        <View
            android:id="@+id/home_separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_area_two"
                style="@style/Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:text="Australia" />

            <Button
                android:id="@+id/home_button_critic"
                style="@style/Overline"
                android:layout_width="54dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/home_area_two"
                android:background="@drawable/corner_radius_button_yellow_critic"
                android:text="@string/home_critic"
                android:textColor="@color/white" />

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/home_info_circle_two"
                style="@style/Overline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/home_icon_trash_two"
                android:padding="8dp"
                android:text="@string/fa_info_circle_solid"
                android:textColor="@color/black"
                app:solid_icon="true" />

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/home_icon_trash_two"
                style="@style/Overline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="@string/fa_trash_alt_solid"
                android:textColor="@color/red"
                app:solid_icon="true" />
        </RelativeLayout>

        <View
            android:id="@+id/home_separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_area_three"
                style="@style/Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:text="Giappone" />

            <Button
                android:id="@+id/home_button_emergency"
                style="@style/Overline"
                android:layout_width="72dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/home_area_three"
                android:background="@drawable/corner_radius_button_red_emergency"
                android:text="@string/home_emergency"
                android:textColor="@color/white" />

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/home_info_circle_three"
                style="@style/Overline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/home_icon_trash_three"
                android:padding="8dp"
                android:text="@string/fa_info_circle_solid"
                android:textColor="@color/black"
                app:solid_icon="true" />

            <info.androidhive.fontawesome.FontTextView
                android:id="@+id/home_icon_trash_three"
                style="@style/Overline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:text="@string/fa_trash_alt_solid"
                android:textColor="@color/red"
                app:solid_icon="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>