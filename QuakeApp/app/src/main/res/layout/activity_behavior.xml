<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/behavior_tips"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/behavior_open_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    style="@style/Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/behavior_toggle"
                    android:padding="16dp"
                    android:text="@string/behavior_aperto" />

                <info.androidhive.fontawesome.FontTextView
                    android:id="@+id/behavior_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/fa_caret_down_solid"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:solid_icon="true" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/behavior_open_area2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor_08"
            style="@style/Body1"
            android:padding="16dp"
            android:text="@string/outdoor_behavior"
            android:visibility="gone" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/behavior_tips"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/behavior_indoors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    style="@style/Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@id/behavior_toggle2"
                    android:padding="16dp"
                    android:text="@string/behavior_chiuso" />

                <info.androidhive.fontawesome.FontTextView
                    android:id="@+id/behavior_toggle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/fa_caret_down_solid"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:solid_icon="true" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/behavior_indoors2"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor_08"
            style="@style/Body1"
            android:padding="16dp"
            android:text="@string/indoor_behavior"
            android:visibility="gone" />
    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/behavior_tips"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/behavior_after"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/behavior_toggle3"
                        android:padding="16dp"
                        android:text="@string/behavior_after" />

                    <info.androidhive.fontawesome.FontTextView
                        android:id="@+id/behavior_toggle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:text="@string/fa_caret_down_solid"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:solid_icon="true" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/behavior_after2"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor_08"
                style="@style/Body1"
                android:padding="16dp"
                android:text="@string/behavior_dopo"
                android:visibility="gone" />
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>
</ScrollView>