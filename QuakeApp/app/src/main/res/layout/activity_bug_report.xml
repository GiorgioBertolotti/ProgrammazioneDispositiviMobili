<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BugReport">

    <TextView
        android:id="@+id/bug_message"
        style="@style/Body2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/bug_text" />

    <EditText
        android:id="@+id/bug_edit_text"
        style="@style/Body1"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:padding="8dp"
        android:background="@drawable/corner_radius_edit_text"
        android:gravity="top"
        android:hint="@string/bug_edit_text"
        android:inputType="textMultiLine" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/bug_message_two"
            style="@style/Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentStart="true"
            android:text="@string/bug_mail" />

        <Button
            android:id="@+id/bug_button"
            style="@style/BUTTON"
            android:layout_width="52dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/corner_radius_button"
            android:text="@string/bug_send"
            android:textColor="@color/backgroundColor"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>