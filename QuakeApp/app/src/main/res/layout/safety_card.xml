<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_safety_measures_card"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/home_layout_card_safety_measures"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/safety_card_background"
        android:padding="8dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/home_layout_card_safety_measures_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_safety_measures"
                style="@style/CaptionMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="4dp"
                android:text="@string/home_safety_measures"
                android:textColor="@color/white_60" />

            <TextView
                android:id="@+id/home_icon_safety"
                style="@style/Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/fa_hard_hat_solid"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/home_layout_card_safety_measures_best_practices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_behaviors"
                style="@style/Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_behaviors"
                android:textColor="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/home_button_view"
            style="@style/BUTTON"
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:background="@drawable/corner_radius_button_card_violet"
            android:paddingHorizontal="8dp"
            android:text="@string/home_view"
            android:textColor="@color/white" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>