<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_recent_eq_card"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/home_layout_card_more_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/earthquake_card_background"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/home_layout_card_more_about_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_layout_card_more_about_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_icon_globe"
                    style="@style/Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="@string/fa_globe_solid"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/home_last"
                    style="@style/CaptionMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/home_last"
                    android:textColor="@color/white_60" />
            </LinearLayout>

            <Button
                android:id="@+id/home_button_more_about"
                style="@style/BUTTON"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/corner_radius_button_card_red"
                android:paddingHorizontal="8dp"
                android:text="@string/home_more_about"
                android:textColor="@color/white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/home_layout_card_more_about_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_layout_card_more_about_bottom_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_today"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/home_today"
                        android:textColor="@color/white_80" />

                    <TextView
                        android:id="@+id/home_number_tremors"
                        style="@style/Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="8"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/home_tremors"
                        style="@style/Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/home_tremors"
                        android:textColor="@color/white_80" />
                </LinearLayout>

                <View
                    android:id="@+id/home_separator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_32" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_layout_card_more_about_bottom_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_this_week"
                    style="@style/Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/home_this_week"
                    android:textColor="@color/white_80" />

                <TextView
                    android:id="@+id/home_number_tremors_week"
                    style="@style/Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="52"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/home_tremors_week"
                    style="@style/Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/home_tremors"
                    android:textColor="@color/white_80" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
